<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS Prototype</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CMCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="/Lecturer">Lecturer</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Coordinator/PendingClaims">Coordinator</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Manager/AllClaims">Manager</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Hr/ApprovedClaims">HR (MVC)</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/HrSummary">HR Summary (Razor)</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- GLOBAL MESSAGES -->
    <div class="container mt-3">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
    </div>

    <!-- Main Content -->
    <div class="container mt-3">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer bg-light text-center mt-5 py-3 border-top">
        <div class="container">
            <span class="text-muted">CMCS Prototype © 2025 | Consistent and Reliable Information</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

